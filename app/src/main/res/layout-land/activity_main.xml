<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center">

    <Button
        android:id="@+id/trici"
        android:layout_width="800dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/triqui" />

    <Button
        android:id="@+id/random"
        android:layout_width="800dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/trici"
        android:layout_centerInParent="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:text="@string/random" />

    <Spinner
        android:id="@+id/idiomas"
        android:entries="@array/spinnerIdiomas"
        android:layout_width="800dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/random"
        android:layout_centerInParent="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp" />

    <Button
        android:id="@+id/paises"
        android:layout_width="800dp"
        android:layout_height="wrap_content"
        android:text="@string/paises"
        android:layout_margin="5dp"
        android:layout_below="@id/idiomas"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="300dp" />

</RelativeLayout>
